.item {
  padding: 0 20rpx;
  height: 100rpx;
  border-bottom: 1px solid #dbdbdb;
}
.first-item {
  height: 140rpx;
}
.item text {
  font-size: 32rpx;
  color: #888;
}
.item .item-key {
  color: #333;
}
.item-user-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.item-value-phone {
  position: relative;
  padding: 10rpx 0 10rpx 50rpx;
}
.item-user-phone {
  position: absolute;
  top: 0;
  right: 0;
  height: 70rpx;
  border: none;
  opacity: 0;
}
.item-value-call {
  padding: 10rpx 0 10rpx 50rpx;
  width: 60rpx;
  height: 60rpx;
}
